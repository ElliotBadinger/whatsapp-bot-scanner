{
  "name": "whatsapp-bot-scanner",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "services/*",
    "tests/*"
  ],
  "scripts": {
    "build": "npm -ws run build",
    "dev": "npm -ws --if-present run dev",
    "test": "npm -ws --if-present test",
    "test:integration": "npm --workspace tests/integration run test",
    "test:e2e": "npm --workspace tests/e2e run test",
    "test:fast": "npm run test:integration && npm run test:e2e",
    "lint": "npm -ws --if-present run lint",
    "migrate": "node scripts/run-migrations.js",
    "seed": "node scripts/run-seeds.js",
    "test:load": "node tests/load/http-load.js",
    "validate:config": "node scripts/validate-config.js",
    "prebuild": "npm run validate:config",
    "export:wwebjs-docs": "node scripts/export-wwebjs-docs.mjs"
  },
  "devDependencies": {
    "cheerio": "^1.1.2",
    "ioredis-mock": "^5.8.0",
    "turndown": "^7.2.1",
    "vitest": "^1.6.0"
  }
}
