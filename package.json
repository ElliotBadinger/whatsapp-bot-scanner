{
  "name": "whatsapp-bot-scanner",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.3",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "whatsapp-bot-scanner": "scripts/unified-cli.mjs"
  },
  "scripts": {
    "validate": "./scripts/validate-types.sh",
    "validate:quick": "bun run --filter '*' build && bun run --filter '*' test -- --passWithNoTests",
    "type-check": "bun run --filter '*' type-check",
    "type-check:strict": "tsc --noEmit --strict && bun run --filter '*' type-check",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix",
    "test": "bun run --filter '*' test -- --passWithNoTests",
    "test:coverage": "bun run --filter '*' test -- --coverage --passWithNoTests",
    "build": "bun run --filter '*' build",
    "build:prod": "NODE_ENV=production bun run --filter '*' build:prod",
    "clean": "bun run --filter '*' clean && rm -rf node_modules .tsbuildinfo",
    "precommit": "./scripts/validate-types.sh",
    "unified-cli": "bun scripts/unified-cli.mjs"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "dependencies": {
    "next": "16.0.7"
  },
  "devDependencies": {
    "@inquirer/prompts": "^8.0.2",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@types/jest": "^29.5.14",
    "boxen": "^8.0.1",
    "bullmq": "^5.65.1",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "cli-spinners": "^3.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "enquirer": "^2.4.1",
    "esbuild": "^0.27.1",
    "execa": "^9.6.1",
    "fast-check": "^3.23.2",
    "figlet": "^1.9.4",
    "humanize-duration": "^3.33.1",
    "ioredis": "^5.8.2",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.7.0",
    "log-symbols": "^7.0.1",
    "nanospinner": "^1.2.2",
    "ora": "^9.0.0",
    "ts-jest": "^29.4.6"
  },
  "overrides": {
    "tar-fs": "^3.1.1",
    "tmp": "^0.2.4",
    "tough-cookie": "^5.1.2",
    "ws": "^8.18.0",
    "form-data": "^4.0.2",
    "glob": "^11.0.0"
  },
  "resolutions": {
    "tar-fs": "3.1.1",
    "tmp": "0.2.4",
    "tough-cookie": "5.1.2",
    "ws": "8.18.0",
    "form-data": "4.0.2",
    "glob": "11.0.0"
  }
}
